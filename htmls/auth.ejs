<!DOCTYPE html>
<html>

<head>
 <meta charset="utf-8">
 <link rel="stylesheet" href="css/modules/auth.css">
 <title>管理员登录</title>
 <link rel="shortcut icon" href="favicon.ico">
</head>

<body>
 <div class="container">
  <form action="/pass" class="auth_form common-form" autocomplete="off">
   <div class="flex align-center justify-center">
    <img class="w-260px h-260px" src="/images/wen.png" alt="icon.png">
<!--    <h2>登录</h2>-->
   </div>
   <div class="form_item_pass">
    <label for="password">密码</label>
    <input id="password" type="password" name="password" class="common-input" placeholder="请输入密码" autocomplete="off">
   </div>
    <button class="submit primary w-100per common-btn" type="submit">进入</button>
  </form>
 </div>
 <script>
  window.getQueryString = function (name, url = window.location.href) {
   if (!url || !name) return null
   var reg = new RegExp("([?&])" + name + "=([^&]*)(&|$)", "i");
   var r = url.match(reg);
   if (r != null) return unescape(r[2]);
   return null;
  }

  var passerror = getQueryString("pass") === 'error'
  if (passerror) {
   alert("密码错误")
  }
  history.replaceState({ pass: '' }, '', '/auth.html')
 </script>

</body>

</html>
